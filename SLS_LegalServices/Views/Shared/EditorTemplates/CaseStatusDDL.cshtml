@model string

@(Html.Kendo().DropDownListFor(m => m)
    .BindTo((IEnumerable<GenericValuesLookupVM>)ViewBag.CaseStatuses)
    .DataValueField("Value")
    .DataTextField("Display")
    .OptionLabel("-- Select --")
    .HtmlAttributes(new { @style = "width:100%" })
    .Events(e => e.Change("whenChanging"))
)