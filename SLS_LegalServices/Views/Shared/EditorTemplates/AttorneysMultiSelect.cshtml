@model IEnumerable<AttorneyVM>
@{ 
        int[] ids = Model != null ? Model.Select(m => m.AttorneyId).ToArray() : new int[] { } ;
    }
@(Html.Kendo().MultiSelectFor(m => m)
    .Name("Attorneys")
    .ClearButton(false)
    .Value(ids)
    .BindTo((IEnumerable<AttorneyVM>)ViewBag.Attorneys)
    .DataValueField("AttorneyId")
    .DataTextField("DisplayName")
    .Events(e => e.Change("whenChanging"))
)

