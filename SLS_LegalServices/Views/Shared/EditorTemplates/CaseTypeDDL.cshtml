@model Nullable<int>

@(Html.Kendo().DropDownListFor(m => m)
    .Name("TypeId")
    .DataTextField("FullDescription")
    .DataValueField("TypeId")
    .HtmlAttributes(new { style = "width:100%" })
    .Filter("contains")
    .OptionLabel("-- Select --")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetTypes", "Intakes");
        })
        .ServerFiltering(true);
    })
    .Events(e => e.Change("whenChanging"))
)
