    .Name("files")
    .Async(a => a
        .Save("Events_Save", "Upload")
        .Remove("Events_Remove", "Upload")
        .AutoUpload(false)
    )
    .Events(events => events
        .Remove("onRemove")
        .Success("onSuccess")
        .Upload("onUpload")
    )
)

<script>

    function onUpload(e) {
        alert("onUpload");
    }

    function onSuccess(e) {
        alert("onSuccess");
    }

    function onRemove(e) {
        alert("onRemove");
    }

    

</script>

