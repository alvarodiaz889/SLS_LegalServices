<script>
    function onRequestEnd(e) {
        if (e.type == "update" || e.type == "create" || e.type == "destroy") {
            $("#IntakesGrid").data("kendoGrid").dataSource.read();
        }
    }

    function onBeforeEdit(e) {
        e.preventDefault();
        var modelId = e.model.CaseId;
        window.location.href = "/Cases/Details/?id=" + modelId;
    }


</script>
@(Html.Kendo().Grid<IntakeVM>()
        .Name("CasesesGrid")
        .Columns(columns =>
        {
            columns.Command(command => { command.Edit().Text("edit"); }).Width(100);
            columns.Bound(c => c.CaseId).Visible(false);
            columns.Bound(c => c.CaseNo);
            columns.Bound(c => c.FullName).Title("Client").Width(250);
            columns.Bound(c => c.CreationDate).Format("{0:dd/MM/yyyy hh:mm tt}").Title("Date").Width(200);
            columns.Template(@<text> </text>).Title("");
                })
                .Scrollable()
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .Model(m => m.Id(c => c.CaseId))
                    .Read(read => read.Action("Read", "Cases"))
                    .Destroy(destroy => destroy.Action("Destroy", "Cases"))
                    .Update(update => update.Action("Update", "Cases"))
                    .Create(create => create.Action("Create", "Cases"))
                    .Events(e => { e.RequestEnd("onRequestEnd"); })
                )
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .Events(e => { e.BeforeEdit("onBeforeEdit"); })
)

